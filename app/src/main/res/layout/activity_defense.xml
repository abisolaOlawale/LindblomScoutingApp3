<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="750dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.electriceagles.team1781.scoutingapp30.DefenseActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Defense"
        android:id="@+id/defenseTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Crossable defenses"
        android:id="@+id/crossableDefenseTextView"
        android:layout_below="@+id/defenseTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheval de Frise"
        android:id="@+id/chevalDeFriseCheckbox"
        android:layout_below="@+id/crossableDefenseTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawbridge"
        android:id="@+id/drawBridgeCheckbox"
        android:layout_alignTop="@+id/chevalDeFriseCheckbox"
        android:layout_toRightOf="@+id/crossableDefenseTextView"
        android:layout_toEndOf="@+id/crossableDefenseTextView"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moat"
        android:id="@+id/moatCheckBox"
        android:checked="false"
        android:layout_above="@+id/rockWallCheckBox"
        android:layout_alignLeft="@+id/roughTerrainCheckBox"
        android:layout_alignStart="@+id/roughTerrainCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Bar"
        android:id="@+id/lowBarCheckBox"
        android:layout_alignTop="@+id/drawBridgeCheckbox"
        android:layout_toRightOf="@+id/defenseTextView"
        android:layout_toEndOf="@+id/defenseTextView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramparts"
        android:id="@+id/rampartsCheckBox"
        android:layout_below="@+id/drawBridgeCheckbox"
        android:layout_alignLeft="@+id/drawBridgeCheckbox"
        android:layout_alignStart="@+id/drawBridgeCheckbox"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock Wall"
        android:id="@+id/rockWallCheckBox"
        android:layout_below="@+id/lowBarCheckBox"
        android:layout_toRightOf="@+id/defenseTextView"
        android:layout_toEndOf="@+id/defenseTextView"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portcullis"
        android:id="@+id/portcullisCheckBox"
        android:checked="false"
        android:layout_below="@+id/chevalDeFriseCheckbox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sally Port"
        android:id="@+id/sallyPortCheckBox"
        android:checked="false"
        android:layout_below="@+id/portcullisCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rough Terrain"
        android:id="@+id/roughTerrainCheckBox"
        android:checked="false"
        android:layout_below="@+id/moatCheckBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Defense(s) where help is needed"
        android:id="@+id/textView5"
        android:layout_below="@+id/sallyPortCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheval de Frise"
        android:id="@+id/ChevalDeFriseHCB"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawbridge"
        android:id="@+id/drawbridgeHCB"
        android:checked="false"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/rampartsCheckBox"
        android:layout_alignStart="@+id/rampartsCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Bar"
        android:id="@+id/lowBarHCB"
        android:checked="false"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/defenseTextView"
        android:layout_toEndOf="@+id/defenseTextView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moat"
        android:id="@+id/moatHCB"
        android:checked="false"
        android:layout_alignTop="@+id/lowBarHCB"
        android:layout_alignLeft="@+id/roughTerrainCheckBox"
        android:layout_alignStart="@+id/roughTerrainCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portcullis"
        android:id="@+id/portcullisHCB"
        android:layout_below="@+id/ChevalDeFriseHCB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramparts"
        android:id="@+id/rampartsHCB"
        android:checked="false"
        android:layout_below="@+id/drawbridgeHCB"
        android:layout_toRightOf="@+id/crossableDefenseTextView"
        android:layout_toEndOf="@+id/crossableDefenseTextView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock Wall"
        android:id="@+id/rockWallHCB"
        android:checked="false"
        android:layout_below="@+id/lowBarHCB"
        android:layout_alignLeft="@+id/lowBarHCB"
        android:layout_alignStart="@+id/lowBarHCB" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rough Terrain"
        android:id="@+id/roughTerrainHCB"
        android:layout_below="@+id/moatHCB"
        android:layout_alignLeft="@+id/moatHCB"
        android:layout_alignStart="@+id/moatHCB"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sally Port"
        android:id="@+id/sallyPortHCB"
        android:layout_below="@+id/portcullisHCB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Playing Defense"
        android:id="@+id/defenseBotCheckBox"
        android:layout_below="@+id/sallyPortHCB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:id="@+id/noneCheckBox"
        android:checked="false"
        android:layout_below="@+id/rampartsCheckBox"
        android:layout_alignLeft="@+id/rampartsCheckBox"
        android:layout_alignStart="@+id/rampartsCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block high goal"
        android:id="@+id/blockHGCheckBox"
        android:layout_below="@+id/defenseBotCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block low goal"
        android:id="@+id/blockLGCheckBox"
        android:layout_alignTop="@+id/blockHGCheckBox"
        android:layout_alignLeft="@+id/rampartsHCB"
        android:layout_alignStart="@+id/rampartsHCB"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block other robots"
        android:id="@+id/blockRobotCheckBox"
        android:layout_alignBottom="@+id/blockLGCheckBox"
        android:layout_toRightOf="@+id/defenseTextView"
        android:layout_toEndOf="@+id/defenseTextView"
        android:checked="false" />


</RelativeLayout>

</ScrollView>